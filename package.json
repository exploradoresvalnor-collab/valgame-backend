{
  "name": "valgame-backend",
  "version": "2.0.0",
  "description": "Backend API for Valgame - A comprehensive RPG gaming platform",
  "main": "dist/app.js",
  "scripts": {
    "test": "npm run test:master",
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "check-env": "node scripts/check-env.js",
    "test:master": "npx jest tests/e2e/master-complete-flow.e2e.test.ts --runInBand --detectOpenHandles --verbose",
    "test:e2e": "npx jest --runInBand --detectOpenHandles",
    "test:unit": "npx jest --testPathPattern=tests/unit --runInBand --detectOpenHandles",
    "test:coverage": "npx jest --coverage --runInBand --detectOpenHandles",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/app.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "validate": "npm run lint && npm run build && npm test",
    "validate:full": "npm run validate && npm run test:master",
    "preproduction": "npm run validate:full",
    "seed": "ts-node -r dotenv/config src/seed.ts",
    "init-db": "ts-node -r dotenv/config src/scripts/init-db.ts",
    "setup-marketplace": "ts-node -r dotenv/config src/scripts/setup-marketplace.ts",
    "migrate:collections": "ts-node -r dotenv/config src/scripts/migrate-collections.ts",
    "create-indexes": "node scripts/create-purchase-index.js",
    "diagnose:onboarding": "ts-node scripts/diagnose-onboarding-flow.ts",
    "fix:onboarding": "ts-node scripts/fix-onboarding-issues.ts",
    "fix:onboarding:apply": "ts-node scripts/fix-onboarding-issues.ts --apply",
    "migrate:evo-cost": "ts-node scripts/migrate-add-evo-cost.ts",
    "fix:game-settings": "ts-node scripts/fix-game-settings-complete.ts",
    "verify:game-settings": "ts-node scripts/verify-game-settings.ts",
    "test:email": "ts-node scripts/test-email.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-rate-limit": "^7.0.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "6.10.0",
    "mongoose": "^8.20.0",
    "node-cron": "^4.2.1",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.6",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "typescript": "^5.9.3",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.4",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mongoose": "^5.11.96",
    "@types/node": "^24.2.1",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^7.0.2",
    "@types/supertest": "^2.0.13",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.38.0",
    "globals": "^16.4.0",
    "jest": "^29.6.1",
    "mongodb-memory-server": "^8.12.1",
    "nodemon": "^3.1.10",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0"
  }
}
